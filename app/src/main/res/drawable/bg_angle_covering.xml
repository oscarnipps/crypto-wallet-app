<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item
        android:top="40dp"
        android:right="100dp">
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/wallet_background_curve"
                />
            <corners
                android:bottomLeftRadius="24dp"
                />

        </shape>
    </item>

    <item
        android:top="10dp"
        android:left="-10dp"
        android:right="25dp"
        android:bottom="-5dp"
        >
        <rotate android:fromDegrees="20">
            <shape
                android:shape="oval">
                <solid
                    android:color="@color/wallet_background_curve"
                    />

                <size android:height="113dp" android:width="205dp"/>
            </shape>
        </rotate>

    </item>







</layer-list>